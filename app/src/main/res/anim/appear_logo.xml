    <alpha android:fromAlpha="0.0" android:toAlpha="1.0" android:duration="4000" />
    <scale android:fromXScale="0.0" android:toXScale="1.0"
        android:fromYScale="0.0" android:toYScale="1.0" android:duration="4000"
